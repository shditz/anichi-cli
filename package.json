{
  "name": "anichi",
  "version": "2.8.2",
  "description": "A modern, interactive CLI for discovering, streaming, and managing anime directly from the terminal.",
  "main": "dist/index.js",
  "bin": {
    "anichi": "./bin/anichi",
    "an": "./bin/anichi"
  },
  "type": "commonjs",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "anime",
    "anime-cli",
    "cli",
    "terminal",
    "streaming",
    "mpv",
    "node-cli"
  ],
  "author": {
    "name": "Aditya K.",
    "email": "adityarabbyoka3@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "figlet": "^1.9.4",
    "g": "^2.0.1",
    "gradient-string": "^3.0.0",
    "node-cache": "^5.1.2",
    "open": "^8.4.2",
    "ora": "^5.4.1",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
